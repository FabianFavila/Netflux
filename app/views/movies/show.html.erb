<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <div class="thumbnail">
          <img src="<%= @movie.image =%>" class="img-thumbnail" alt="Portada">
        </div>
      </div>
      <div class="col-md-6">
        <h1 class="review_title"><%= @movie.title %></h1>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Titulo:</strong></td>
                <td><%= @movie.title %></td>
              </tr>
              <tr>
                <td><strong>Descripcion:</strong></td>
                <td><%= @movie.description %></td>
              </tr>
              <tr>
                <td><strong>AÃ±o:</strong></td>
                <td><%= @movie.year %></td>
              </tr>
              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @movie.rating %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <% if @movie.stock == 0 %>
          <button type="button" class="btn btn-default disabled btn-block">Lo sentimos, esta pelicula no esta disponible</button>
        <% else %>
          <form>
            <%= link_to "Rentar", new_rent_path(@movie), :class => 'btn btn-danger btn-block' %>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</div>

