<h2 style="color:white;">Iniciar sesion</h2>
<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class="col-md-7">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email, label: 'Ingresa tu email', autofocus: true %>

          <%= f.input :password, label: 'Ingresa tu constraseÃ±a', autocomplete: "off" %>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>

          <div><%= f.button :submit, "Iniciar sesion", class: "btn btn-primary" %></div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


